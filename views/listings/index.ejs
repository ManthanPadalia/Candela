<% layout("/layouts/boilerplate") %>

<div class="row row-cols-lg-3 row row-cols-md-2 row row-cols-sm-1 mt-3">
  <% for(let list of allListings){ %>
  <a href="/listings/<%= list._id %>" class="listing-link">
    <div class="card listing-card" style="width: 20rem">
      <img
        src="<%= list.image.url %>"
        class="card-img-top"
        alt="..."
        style="height: 16rem"
      />
      <div class="card-body">
        <h5 class="card-title" style="margin-bottom: 0"><%= list.title %></h5>
        <p class="card-price" style="margin-bottom: 0.5rem">
          &#8377;<%= list.price %>
        </p>
        <button class="btn search-btn" type="submit" style="font-size: small">
          Show details
        </button>
      </div>
    </div>
  </a>
  <% } %>
</div>
