<% layout("/layouts/boilerplate") %>
<div>
  <div class="row">
    <div class="col-8 offset-2">
      <br /><br />
      <h3 style="margin-bottom: 1.5rem">Signup:</h3>
      <form method="POST" action="/signup" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username: </label>
          <input
            id="username"
            name="username"
            placeholder="Enter your username"
            type="text"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email Address: </label>
          <input
            id="email"
            name="email"
            placeholder="Enter your email address"
            type="email"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="community" class="form-label">Community: </label>
          <input
            id="community"
            name="community"
            placeholder="Enter or select your community"
            type="text"
            class="form-control"
            list="communities"
            required
          />
          <datalist id="communities">
            <% communities.forEach(comm => { %>
            <option value="<%= comm %>"></option>
            <% }) %>
          </datalist>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password: </label>
          <input
            id="password"
            name="password"
            placeholder="Enter your password"
            type="password"
            class="form-control"
            required
          />
        </div>
        <button
          type="submit"
          class="btn btn-secondary mt-3 mb-5"
          style="background-color: #3c3744"
        >
          Submit
        </button>
      </form>
    </div>
  </div>
</div>
